{
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "mocha": true,
        "serviceworker": true
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "curly": ["error", "all"],
        "array-bracket-newline": ["error", "consistent"],
        "brace-style": ["error", "allman"],
        "capitalized-comments": [
            "error",
            "always",
            { "ignoreConsecutiveComments": true }
        ],
        "comma-dangle": ["error", "always-multiline"],
        "eol-last": ["error", "always"],
        "no-unused-vars": ["warn"]
    },
    "settings": {
        "version": "detect"
    }
}
